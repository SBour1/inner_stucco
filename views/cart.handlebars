<div class="row px-2 px-sm-5 justify-content-center">
    <div class="col-12 col-md-10">

        {{#if loggedIn}}
            {{#each cartItems}}
                <div class="my-3 card shadow-sm rounded post" data-order_id="{{id}}">
                    <div class="card-header bg-success text-white d-flex justify-content-between">
                        <h2 class="card-title">{{name}}</h2> 
                        <h4 id="item-price">${{price}}</h4>
                    </div>
                    <div class="card-body bg-light p-3">
                        <p>{{description}}</p>
                    </div>
            
                </div>
            {{/each}}
            <h2 id="total"></h2>
        {{else}}
            <!-- Otherwise, show a link to login -->
            <a href="/login">Login</a>
        {{/if}}
        
    </div>
</div>
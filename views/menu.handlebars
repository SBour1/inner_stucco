<section class="container">
    <h3 class="menu-name">{{menu.name}}</h3>
    <section class="flex-row justify-center">
        {{#each menu.items as |item|}}
        {{> menu-details}}
        {{#if hasNuts}}
        <p>Warning: Contains Nuts</p>
        {{/if}}
        {{#if hasMeat}}
        <p>Warning: Contains Meat</p>
        {{/if}}
        {{/each}}
    </section>
</section>